      <div class="form-group p-1em mr-15em">
        <label for="email-signup" class="signup-label">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group p-1em mr-15em">
        <label for="password-signup" class="signup-label">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group p-1em mr-15em">
        <label for="celestialtype-signup" class="signup-label">celestial type:</label>
        <input class="form-input" type="text" id="celestialtype-signup" />
      </div>
      <div class="form-group p-1em mr-15em">
