        <input class="form-input" type="text" id="gravity-signup" />
      </div>
      <div class="form-group p-1em mr-15em">
        <label for="elements-signup" class="signup-label">primary elements:</label>
        <input class="form-input" type="text" id="elements-signup" />
      </div>
      <div class="form-group p-1em mr-15em">
        <label for="light-signup" class="signup-label">light energy:</label>
        <input class="form-input" type="text" id="light-signup" />
      </div>
      <div class="form-group p-1em mr-15em">
        <label for="quote-signup" class="signup-label">favorite quote:</label>
        <input class="form-input" type="text" id="quote-signup" />
      </div>
      <div class="card-footer form-group d-f jc-c bg-dark-blue">
        <button class="btn btn-primary zen-dots bg-lavender" type="submit">sign-up</button>
      </div>
    </form>
  </div>
</div>

